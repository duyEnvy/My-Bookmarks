<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BookmarksFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <LinearLayout
                android:paddingTop="20dp"
                android:id="@+id/zingMp3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/blueZone"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_rectangle_background"
                >
                <ImageView
                    android:id="@+id/imgZingMp3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/zingmp3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zing Mp3"
                    android:textSize="10pt"
                    />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="20dp"
                android:id="@+id/blueZone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/zingMp3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/vnExpress"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:background="@drawable/white_rectangle_background"
                >

                <ImageView
                    android:id="@+id/imgBlueZone"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bluezone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BlueZone"
                    android:textSize="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="20dp"
                android:id="@+id/baomoi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/white_rectangle_background"
                app:layout_constraintTop_toBottomOf="@id/zingMp3"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toLeftOf="@id/vnExpress"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/imgBaoMoi"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/baomoi"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BlueZone"
                    android:textSize="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="20dp"
                android:id="@+id/vnExpress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_rectangle_background"
                app:layout_constraintTop_toBottomOf="@id/blueZone"
                app:layout_constraintLeft_toRightOf="@id/baomoi"
                app:layout_constraintRight_toRightOf="parent"
                >
                <ImageView
                    android:id="@+id/imgVnExpress"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/vnexpress"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BlueZone"
                    android:textSize="10pt"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>